{

    "manifest_version": 2,
    "name": "Unshallow",
    "version": "0.1",

    "description": "Adds a red border to all webpages matching mozilla.org.",

    "icons": {
        "48": "icons/icon.png"
    },

    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Unshallow",
        "default_popup": "popup/choose_mode.html"
    },

    "permissions": [
        "activeTab"
    ],

    "content_scripts": [
        {
            "matches": ["*://*.wikipedia.org/*"],
            "js": ["unshallow.js"]
        }
    ]

}
